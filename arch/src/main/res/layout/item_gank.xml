<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_size_12"
        android:paddingLeft="@dimen/text_size_16"
        android:paddingRight="@dimen/text_size_16"
        android:paddingTop="@dimen/text_size_12">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desc"
            android:textColor="#cccccc"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_author"
            android:layout_alignTop="@+id/tv_author"
            android:layout_toRightOf="@+id/tv_author"
            android:gravity="center_vertical|right"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

</android.support.v7.widget.CardView>